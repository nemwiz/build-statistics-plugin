{
    "npmClient": "yarn",
    "useWorkspaces": true,
    "packages": [
        "packages/*"
    ],
    "version": "independent",
    "command": {
        "version": {
            "allowBranch": [
                "main"
            ],
            "createRelease": "github",
            "conventionalCommits": true
        },
        "publish": {
            "registry": "https://registry.npmjs.org"
        }
    }
}
